@model FluxoCaixa.Lancamentos.Application.ViewModels.LancamentoViewModel

@{
    ViewData["Title"] = "Editar Lançamento";
}

<h1>Editar Lançamento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRecebimento" class="control-label"></label>
                <input asp-for="DataRecebimento" class="form-control" />
                <span asp-validation-for="DataRecebimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoLancamento" class="control-label"></label>
                <select asp-for="TipoLancamento" class="form-control" asp-items="@FluxoCaixa.WebApp.MVC.Utils.Dropdown.GetTipoLancamento()">
                    <option value="">Selecione um lançamento</option>
                </select>
                <span asp-validation-for="TipoLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
