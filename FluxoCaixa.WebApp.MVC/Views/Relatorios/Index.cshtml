<h1>Relatórios</h1>

<nav aria-label="breadcrumb" class="sr-only">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Início</a></li>
        <li class="breadcrumb-item active" aria-current="page">Relatórios</li>
    </ol>
</nav>

<form asp-action="Gerar" asp-controller="Relatorios" method="get" class="no-spinner" target="_blank">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label class="control-label">Data de Geração</label>
                    <input type="datetime-local" class="form-control" data-mask="00/00/0000" id="dataRecebimento" name="dataRecebimento" value="@ViewData["dataRecebimento"]" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Gerar</button>
        </div>
    </div>
</form>

<style type="text/css">
    .input-group-text {
        min-width: 150px !important;
    }

    input[type="radio"] {
        visibility: hidden;

    }

    .card-header label {
        margin: 0 0 6px -15px;
        cursor: pointer;
    }

    .btn-outline-primary-hover {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-outline-primary-hover:hover {
        color: #fff;
        border-color: #007bff;
    }
</style>

@section Scripts {
    @{
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    }
    }